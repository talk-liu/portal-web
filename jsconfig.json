  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "./src/**/*",
  ],
  "target": "ES6",
  "module": "commonjs",
  "allowSyntheticDefaultImports": true
}